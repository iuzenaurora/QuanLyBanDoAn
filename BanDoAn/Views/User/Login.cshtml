<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
<link href="~/Content/login_layout_css.css" rel="stylesheet" />

@Html.Partial("_ThongBao")

<div class="container-fluid p-0">
    <div class="row g-0 split-layout">

        <!-- Cột trái: Hình ảnh & Branding (Giống mẫu) -->
        <div class="col-md-6 col-lg-7 left-side">

            <div class="brand-text">
                FoodStore.<span>Com</span>
            </div>

            <div class="quote-text">
                "Món ăn ngon tại<br>
                <span style="font-style: italic; font-weight: 300;">FoodStore"</span>
            </div>

        </div>

        <!-- Cột phải: Form Đăng nhập -->
        <div class="col-md-6 col-lg-5 right-side">
            <div class="login-wrapper">
                <div class="login-header mb-4">
                    <h2>Xin chào,</h2>
                    <p class="text-muted">Đăng nhập để mua đồ ăn nào.</p>
                </div>

                <!-- Giả lập Form Method Post như trong Razor view của bạn -->
                @using (Html.BeginForm("LoginOnSubmit", "User", FormMethod.Post))
                {
                    <div class="mb-4">
                        <label class="form-label text-muted small fw-bold">TÀI KHOẢN</label>
                        <input type="text" class="form-control" name="Username" placeholder="Nhập tên đăng nhập" required>
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-muted small fw-bold">MẬT KHẨU</label>
                        <input type="password" class="form-control" name="Password" placeholder="Nhập mật khẩu" required>
                    </div>

                    <button type="submit" class="btn-login">
                        ĐĂNG NHẬP
                    </button>
                }

                <div class="text-center mt-4">
                    <small class="text-muted">Chưa có tài khoản? <a href="@Url.Action("Register", "User")" class="register-link">Đăng ký ngay</a></small>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>