@model BanDoAn.tblSanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2 class="mb-4 text-danger font-weight-bold">Xóa Sản Phẩm</h2>

<!-- Card cảnh báo và thông tin chi tiết -->
<div class="card shadow-lg border-danger rounded-lg p-4 mb-4">
    <div class="card-header bg-danger text-white rounded-top-lg">
        <h3 class="mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i> Bạn có chắc rằng muốn xóa?
        </h3>
        <small>Hành động này không thể hoàn tác.</small>
    </div>
    <div class="card-body">
        <hr />
        <div class="row">
            <!-- Cột ảnh sản phẩm (50% trên màn hình vừa/lớn) -->
            <div class="col-md-6 col-sm-12 text-center mb-4 mb-md-0">
                <img src="@Url.Content("~/Content/images/" + Model.AnhBia)"
                     class="img-fluid rounded-lg shadow-md border"
                     alt="Ảnh Bìa Sản Phẩm"
                     style="max-height: 400px; object-fit: cover; width: 100%;" />
            </div>

            <!-- Cột thông tin sản phẩm (50% trên màn hình vừa/lớn) -->
            <div class="col-md-6 col-sm-12">
                <h4 class="text-danger mb-3">Thông tin chi tiết</h4>
                <dl class="row dl-horizontal">
                    <dt class="col-sm-4 text-secondary">
                        @Html.DisplayNameFor(model => model.MaSP)
                    </dt>
                    <dd class="col-sm-8 text-dark font-weight-bold">
                        @Html.DisplayFor(model => model.MaSP)
                    </dd>

                    <dt class="col-sm-4 text-secondary">
                        @Html.DisplayNameFor(model => model.TenSP)
                    </dt>
                    <dd class="col-sm-8 text-dark font-weight-bold">
                        @Html.DisplayFor(model => model.TenSP)
                    </dd>

                    <dt class="col-sm-4 text-secondary">
                        @Html.DisplayNameFor(model => model.MaDM)
                    </dt>
                    <dd class="col-sm-8 text-dark font-weight-bold">
                        @Html.DisplayFor(model => model.MaDM)
                    </dd>

                    <dt class="col-sm-4 text-secondary">
                        @Html.DisplayNameFor(model => model.GiaBan)
                    </dt>
                    <dd class="col-sm-8 text-success font-weight-bold">
                        @Html.DisplayFor(model => model.GiaBan)
                    </dd>

                    <dt class="col-sm-4 text-secondary">
                        @Html.DisplayNameFor(model => model.MoTa)
                    </dt>
                    <dd class="col-sm-8 text-muted">
                        @Html.DisplayFor(model => model.MoTa)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Form Xác nhận Xóa -->
@using (Html.BeginForm("DeleteOnSubmit", "Admin", new { id = Model.MaSP }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="d-flex justify-content-end mt-4 pt-3 border-top">
        <!-- Nút Xóa (Màu đỏ - Danger) -->
        <button type="submit" class="btn btn-danger btn-lg me-3 rounded-pill shadow-lg">
            <i class="fas fa-trash-alt me-2"></i> Xóa Vĩnh Viễn
        </button>

        <!-- Nút Quay lại (Màu xám) -->
        <a href="@Url.Action("QLThucDon", "Admin")" class="btn btn-outline-secondary btn-lg rounded-pill shadow-sm">
            <i class="fas fa-chevron-left me-2"></i> Quay Lại
        </a>
    </div>
}
