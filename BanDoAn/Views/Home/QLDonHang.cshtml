@model IEnumerable<BanDoAn.tblHoaDon>
@using System.Globalization
@{
    ViewBag.Title = "Quản Lý Đơn Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Style riêng cho Avatar hình tròn tạo từ chữ cái */
    .avatar-initial {
        width: 40px;
        height: 40px;
        background-color: #e9ecef;
        color: #495057;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.1rem;
        flex-shrink: 0;
    }

    /* Hover effect cho hàng trong bảng */
    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,0.02);
    }
</style>

<!-- Mục quản lý đơn hàng -->
<section class="py-4" id="admin-panel">

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h4 class="fw-bold mb-0 text-dark border-start border-4 border-danger ps-3">Quản Lý Đơn Hàng</h4>

        <!-- Thống kê nhỏ hoặc nút filter -->
        <div class="d-flex gap-2">
            <span class="badge bg-white text-secondary border shadow-sm p-2 px-3 rounded-pill">
                <i class="fas fa-receipt me-2 text-danger"></i>Tổng đơn: <span class="fw-bold text-dark">@(Model != null ? Model.Count() : 0)</span>
            </span>
        </div>
    </div>

    <!-- Table Section -->
    <div class="table-responsive rounded-3 shadow-sm border">
        <table class="table table-hover align-middle mb-0 bg-white">
            <thead class="bg-light text-secondary">
                <tr>
                    <th class="ps-3 py-3">Mã Đơn</th>
                    <th>Khách hàng</th>
                    <th>Thời gian</th>
                    <th>Địa chỉ</th>
                    <th>Tổng tiền</th>
                    <th>TT</th>
                    <th>Trạng thái</th>
                    <th class="text-end pe-3">Hành động</th>
                </tr>
            </thead>
            <tbody id="admin-order-table">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-3 py-3 fw-bold text-secondary">#@item.MaHD</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <!-- Avatar giả lập -->
                                    <div class="avatar-initial me-2 shadow-sm border">
                                        @(item.tblKhachHang != null && item.tblKhachHang.TenKH.Length > 0 ? item.tblKhachHang.TenKH.Substring(0,1).ToUpper() : "?")
                                    </div>
                                    <div>
                                        <span class="fw-bold small d-block text-dark">@(item.tblKhachHang != null ? item.tblKhachHang.TenKH : "Khách vãng lai")</span>
                                        <span class="text-muted small" style="font-size: 0.75rem;">
                                            <i class="fas fa-phone-alt me-1"></i>@(item.tblKhachHang != null ? item.tblKhachHang.SoDienThoai : "")
                                        </span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="small fw-bold">@String.Format("{0:dd/MM/yyyy}", item.NgayLap)</div>
                                <div class="small text-muted">@String.Format("{0:HH:mm}", item.NgayLap)</div>
                            </td>
                            <td>
                                <span class="d-inline-block text-truncate text-secondary small" style="max-width: 150px;" title="@item.DiaChiGiaoHang">
                                    @item.DiaChiGiaoHang
                                </span>
                            </td>
                            <td class="fw-bold text-danger small">
                                @String.Format(CultureInfo.GetCultureInfo("vi-VN"), "{0:N0} đ", item.TongTien)
                            </td>
                            <td>
                                @if (item.DaThanhToan == true)
                                {
                                    <i class="fas fa-check-circle text-success" title="Đã thanh toán"></i>
                                }
                                else
                                {
                                    <i class="far fa-circle text-muted" title="Chưa thanh toán"></i>
                                }
                            </td>
                            <td>
                                @{
                                    string badgeClass = "";
                                    string statusText = "";
                                    switch (item.TinhTrang)
                                    {
                                        case 1: badgeClass = "bg-warning-subtle text-warning border border-warning"; statusText = "Chờ xử lý"; break;
                                        case 2: badgeClass = "bg-success-subtle text-success border border-success"; statusText = "Hoàn tất"; break;
                                        case 3: badgeClass = "bg-danger-subtle text-danger border border-danger"; statusText = "Đã hủy"; break;
                                        default: badgeClass = "bg-light text-secondary border"; statusText = "N/A"; break;
                                    }
                                }
                                <span class="badge @badgeClass rounded-pill fw-normal px-2 py-1">@statusText</span>
                            </td>
                            <td class="text-end pe-3">
                                <!-- Nút Cập nhật trạng thái -->
                                <button class="btn btn-sm btn-light text-primary border shadow-sm" title="Cập nhật trạng thái"
                                        onclick="openUpdateModal(@item.MaHD, @item.TinhTrang)">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center py-5 text-muted">Chưa có dữ liệu đơn hàng.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<!-- Modal Cập nhật trạng thái (Giữ nguyên logic, chỉnh lại style cho khớp) -->
<div class="modal fade" id="updateStatusModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 bg-light">
                <h5 class="modal-title fw-bold text-dark">Cập nhật trạng thái</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="@Url.Action("UpdateOrderStatus", "Home")" method="post">
                <div class="modal-body p-4">
                    <input type="hidden" name="MaHD" id="modalMaHD" />

                    <div class="d-flex align-items-center mb-4 p-3 bg-light rounded-3 border">
                        <div class="flex-grow-1">
                            <div class="small text-uppercase text-muted fw-bold">Mã đơn hàng</div>
                            <div class="fs-4 fw-bold text-dark" id="displayMaHD">#0</div>
                        </div>
                        <i class="fas fa-receipt fa-2x text-black-50"></i>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Trạng thái mới</label>
                        <select class="form-select form-select-lg border-2 shadow-none" name="TinhTrang" id="modalTinhTrang">
                            <option value="1">⏳ Đang chờ xử lý</option>
                            <option value="2">✅ Đã giao hàng (Hoàn tất)</option>
                            <option value="3">❌ Đã hủy</option>
                        </select>
                        <div class="form-text mt-2"><i class="fas fa-info-circle me-1"></i>Chọn "Đã giao hàng" sẽ tự động cập nhật thanh toán.</div>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-danger py-2 fw-bold shadow-sm rounded-3">Lưu thay đổi</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Scripts -->
<script>
    function openUpdateModal(maHD, tinhTrangHienTai) {
        document.getElementById('modalMaHD').value = maHD;
        document.getElementById('displayMaHD').innerText = '#' + maHD;
        document.getElementById('modalTinhTrang').value = tinhTrangHienTai;
        var myModal = new bootstrap.Modal(document.getElementById('updateStatusModal'));
        myModal.show();
    }
</script>