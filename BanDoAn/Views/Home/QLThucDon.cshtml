@model IEnumerable<BanDoAn.tblSanPham>
@using System.Globalization
@{
    ViewBag.Title = "QLThucDon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Mục quản lý sản phẩm-->
<section class="container" id="admin-panel">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h4 class="fw-bold mb-0 text-dark border-start border-4 border-danger ps-3">Quản Lý Thực Đơn</h4>
        <button class="btn btn-success rounded-pill px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#addProductModal"><i class="fas fa-plus me-2"></i>Thêm Món</button>
    </div>
    <div class="table-responsive rounded-3 shadow-sm border">
        <table class="table table-hover align-middle mb-0 bg-white">
            <thead class="bg-light text-secondary">
                <tr>
                    <th class="ps-3">Món ăn</th>
                    <th>Giá</th>
                    <th>Danh mục</th>
                    <th class="text-end pe-3">Hành động</th>
                </tr>
            </thead>
            <tbody id="admin-product-table">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-3 py-3">
                            <div class="d-flex align-items-center">
                                <img src="@Url.Content("~/Content/images/" + item.AnhBia)" width="40" height="40" class="rounded me-2 object-fit-cover">
                                <span class="fw-bold small text-truncate" style="max-width: 120px;">@item.TenSP</span>
                            </div>
                        </td>
                        <td class="small">@item.GiaBan.Value.ToString("N0", new CultureInfo("vi-VN"))</td>
                        <td>
                            <span class="badge bg-light text-dark border">
                                @(item.tblDanhMucCon?.MaLoai == 1 ? "Món chính" : item.tblDanhMucCon?.MaLoai == 2 ? "Giải khát" : "Ngọt ngào")
                            </span>
                        </td>
                        <td class="text-end pe-3">
                            <button data-bs-toggle="modal" data-bs-target="#editProductModal" data-id="@item.MaSP" class="edit-btn btn btn-sm btn-light text-secondary border"><i class="fa-solid fa-pen"></i></button>
                            <a href="@Url.Action("DeleteOnSubmit", "Home", new {id = item.MaSP})" class="btn btn-sm btn-light text-danger border"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<!--Thêm sản phẩm-->
@Html.Action("AddProduct", "Home")

<!--Chỉnh sửa sản phẩm-->
<div class="modal fade" id="editProductModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 bg-light">
                <h5 class="modal-title fw-bold">Cập nhật món ăn</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4" id="editProductContainer">

            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).on("click", ".edit-btn", function () {
        var id = $(this).data("id");

        $("#editProductContainer").load("/Home/EditProduct?id=" + id);
    });
</script>