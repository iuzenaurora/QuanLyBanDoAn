@{
    var message = TempData["ThongBao"] as string;
    var type = TempData["LoaiThongBao"] as string ?? "info";
}

@if (!string.IsNullOrEmpty(message))
{
    string iconSvg = "";
    string colorCode = "";
    string bgSoft = "";

    // Cấu hình Icon SVG và Màu sắc
    switch (type)
    {
        case "success":
            colorCode = "#198754"; // Xanh lá
            bgSoft = "#d1e7dd";
            // Icon check
            iconSvg = "<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' fill='currentColor' class='bi bi-check-circle-fill' viewBox='0 0 16 16'><path d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z'/></svg>";
            break;
        case "error":
            colorCode = "#dc3545"; // Đỏ
            bgSoft = "#f8d7da";
            // Icon X
            iconSvg = "<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' fill='currentColor' class='bi bi-exclamation-circle-fill' viewBox='0 0 16 16'><path d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z'/></svg>";
            break;
        case "warning":
            colorCode = "#ffc107"; // Vàng
            bgSoft = "#fff3cd";
            // Icon tam giác
            iconSvg = "<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' fill='currentColor' class='bi bi-exclamation-triangle-fill' viewBox='0 0 16 16'><path d='M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z'/></svg>";
            break;
        default:
            colorCode = "#0dcaf0"; // Xanh dương
            bgSoft = "#cff4fc";
            // Icon info
            iconSvg = "<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' fill='currentColor' class='bi bi-info-circle-fill' viewBox='0 0 16 16'><path d='M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z'/></svg>";
            break;
    }

    <style>
        /* Animation trượt từ trên xuống và nảy nhẹ */
        @@keyframes slideDownBounce {
            0% {
                transform: translate(-50%, -100%);
                opacity: 0;
            }

            60% {
                transform: translate(-50%, 10%);
                opacity: 1;
            }

            100% {
                transform: translate(-50%, 0);
                opacity: 1;
            }
        }
    </style>

    <div id="customAlert"
         class="d-flex align-items-center shadow-lg rounded-pill px-4 py-3"
         style="position: fixed;
                top: 30px;
                left: 50%;
                transform: translateX(-50%);
                z-index: 9999;
                min-width: 400px;
                background-color: white;
                border-bottom: 4px solid @colorCode;
                animation: slideDownBounce 0.6s ease-out;">

        <div class="d-flex align-items-center justify-content-center rounded-circle me-3"
             style="width: 40px; height: 40px; background-color: @bgSoft; color: @colorCode; flex-shrink: 0;">
            @Html.Raw(iconSvg)
        </div>

        <div class="flex-grow-1">
            <h6 class="mb-0 fw-bold text-uppercase" style="color: @colorCode; font-size: 0.75rem; letter-spacing: 1px;">
                @type
            </h6>
            <span class="text-dark fw-medium">@message</span>
        </div>

        <button type="button" class="btn-close ms-3" onclick="closeAlert()" aria-label="Close"></button>
    </div>

    <script>
        function closeAlert() {
            var alertBox = document.getElementById('customAlert');
            if (alertBox) {
                alertBox.style.opacity = '0';
                alertBox.style.transform = 'translate(-50%, -100%)'; // Trượt ngược lên trên
                alertBox.style.transition = 'all 0.4s ease-in';
                setTimeout(() => alertBox.remove(), 400);
            }
        }

        // Tự động tắt sau 3.5 giây
        setTimeout(closeAlert, 2500);
    </script>
}