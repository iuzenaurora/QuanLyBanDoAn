<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>FoodStore - Ứng dụng đặt món</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">

    <link href="~/Content/layout_style.css" rel="stylesheet" />
</head>

<!--Xử lý logic-->
@{
    var user = Session["User"] as BanDoAn.tbltaikhoan;

    string tenkh = "";

    if (user != null && user.tblKhachHang != null && !string.IsNullOrEmpty(user.tblKhachHang.TenKH))
    {
        string tenDayDu = user.tblKhachHang.TenKH;
        int index = tenDayDu.LastIndexOf(' ');
        tenkh = (index == -1) ? tenDayDu : tenDayDu.Substring(index + 1);
    }
}

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")"><i class="fas fa-burger me-2"></i>FoodStore</a>

            <div class="d-flex align-items-center order-lg-3 gap-1">
                <!-- Search -->
                <!-- HOVER SEARCH BOX -->
                @using (Html.BeginForm("Timkiem", "Home", FormMethod.Get, new { @class = "search-box" }))
                {
                    <input type="text" class="search-txt" id="hoverSearchInput" placeholder="Tìm món..." autocomplete="off" name="keyword" value="@ViewBag.keyword">
                    <button class="search-btn border-0" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                }

                <!-- Cart Icon -->
                <a class="btn-icon-nav me-1" data-bs-toggle="modal" data-bs-target="#cartModal" title="Giỏ hàng">
                    <i class="fas fa-bag-shopping fa-lg"></i>
                    <span id="cart-count" class="badge rounded-pill badge-cart">
                        @(Session["Cart"] != null ? (((BanDoAn.Models.Cart)Session["Cart"]).soLuongMH()) : 0)
                    </span>
                </a>

                @if (Session["User"] == null)
                {
                    <!-- Desktop Auth Section -->
                    <div class="d-lg-block" id="desktop-auth-section">
                        <a href="#" class="btn-icon-nav" data-bs-toggle="modal" data-bs-target="#authOptionModal">
                            <i class="fas fa-user fa-lg"></i>
                        </a>
                    </div>
                }
                else
                {
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark p-2 rounded-pill bg-white shadow-sm border" data-bs-toggle="dropdown">
                            @if (user.makh != null)
                            {
                                <img src="https://ui-avatars.com/api/?name=@user.tblKhachHang.TenKH&background=ff6b6b&color=fff&size=32" class="rounded-circle me-2" width="32" height="32">
                                <span class="fw-bold me-2 small text-truncate" style="max-width: 80px;">@tenkh</span>
                            }
                            else
                            {
                                <img src="https://ui-avatars.com/api/?name=@user.username&background=ff6b6b&color=fff&size=32" class="rounded-circle me-2" width="32" height="32">
                                <span class="fw-bold me-2 small text-truncate" style="max-width: 80px;">@user.username</span>
                            }
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow mt-2 rounded-4 overflow-hidden">
                            <li class="bg-light p-2 text-center"><small class="text-muted fw-bold text-uppercase">@user.tblVaiTro.TenVaiTro</small></li>
                            <li><hr class="dropdown-divider my-0"></li>
                            <li><a class="dropdown-item py-2" href="@Url.Action("Logout", "User")"><i class="fas fa-sign-out-alt me-2 text-danger"></i>Đăng xuất</a></li>
                        </ul>
                    </div>
                }


                <!-- Toggler -->
                <button class="navbar-toggler border-0 p-0 ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse order-lg-2" id="navbarNav">
                <ul class="navbar-nav mx-auto align-items-center mt-3 mt-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    @Html.Action("_MenuThucDon", "Home")
                    <li class="nav-item"><a class="nav-link" href="#">Về chúng tôi</a></li>
                    @if (Session["User"] != null)
                    {
                        if (user.makh != null)
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("LSDonHang", "KhachHang")">Lịch sử đơn hàng</a></li>
                        }
                        else
                        {
                            <li class="dropdown nav-item">
                                <a class="nav-link" href="@Url.Action("QuanTri", "Admin")">Quản trị</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    @if (ViewContext.RouteData.Values["controller"].ToString() == "Home" &&
     ViewContext.RouteData.Values["action"].ToString() == "Index")
    {
        <section class="hero-section">
            <div class="container">
                <div class="row align-items-center flex-column-reverse flex-md-row">
                    <div class="col-md-6 mt-4 mt-md-0 text-center text-md-start">
                        <h1 class="hero-title mb-3">Vị Ngon <br><span style="color: var(--primary-color)">Đánh Thức</span> Mọi Giác Quan</h1>
                        <p class="lead text-muted mb-4 fs-6">Đặt món nhanh chóng, giao hàng tận nơi. Đăng nhập ngay để nhận ưu đãi giảm giá 20% cho đơn đầu tiên!</p>
                        <div class="d-flex gap-3 justify-content-center justify-content-md-start hero-btns">
                            <a href="#menu" class="btn btn-danger rounded-pill px-5 py-3 fw-bold shadow-lg" style="background: var(--primary-color); border:none;">Đặt Ngay <i class="fas fa-arrow-right ms-2"></i></a>
                            <button class="btn btn-white bg-white rounded-pill px-4 py-3 fw-bold shadow-sm text-dark"><i class="fas fa-play me-2 text-danger"></i> Xem Video</button>
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                        <div class="hero-img-wrap">
                            <img src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="img-fluid" alt="Hero Food">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }


    <main class="container mb-5 mt-5">
        @Html.Partial("_ThongBao")
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-top mt-5 pt-5">
        <div class="container pb-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="fw-bold text-dark mb-3"><i class="fas fa-burger text-danger me-2"></i>FoodStore</h5>
                    <p class="text-muted small">Hệ thống đặt món ăn trực tuyến hàng đầu. Cam kết chất lượng, giao hàng nhanh chóng và phục vụ tận tâm.</p>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Liên kết</h6>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">Về chúng tôi</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">Chính sách bảo mật</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">Điều khoản sử dụng</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Liên hệ</h6>
                    <p class="text-muted small mb-1"><i class="fas fa-map-marker-alt me-2"></i> Hồ Chí Minh, Việt Nam</p>
                    <p class="text-muted small mb-1"><i class="fas fa-envelope me-2"></i> contact@foodstore.com</p>
                </div>
            </div>
        </div>
        <div class="text-center py-3 bg-light border-top">
            <small class="text-muted">&copy; 2025 FoodStore. Love u ❤️</small>
        </div>
    </footer>

    <!--Giỏ hàng-->
    <div class="modal fade" id="cartModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content border-0 shadow-lg rounded-4">
                <div class="modal-header border-bottom-0 pb-0">
                    <h5 class="modal-title fw-bold">Giỏ hàng của bạn 🛒</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="cart-modal-content">
                    @Html.Action("ViewCart", "Cart")
                </div>
            </div>
        </div>
    </div>
    <!--Option Login-->
    @Html.Action("optLogin", "User")
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).on("click", ".btn-plus", function () {
            let id = $(this).data("id");
            // Thêm callback function (tham số thứ 2) để chạy sau khi load xong
            $("#cart-modal-content").load("/Cart/UpdateSL?id=" + id + "&type=1");
        });

        $(document).on("click", ".btn-minus", function () {
            let id = $(this).data("id");
            // Thêm callback function (tham số thứ 2) để chạy sau khi load xong
            $("#cart-modal-content").load("/Cart/UpdateSL?id=" + id + "&type=-1");
        });
    </script>

</body>
</html>